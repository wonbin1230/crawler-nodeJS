{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "lib": [
            "DOM",
            "ES2022"
        ],
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "./dist",
        "noImplicitAny": true
    },
    "include": [
        "src/**/*",
        "libs/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "files": true
    }
}
